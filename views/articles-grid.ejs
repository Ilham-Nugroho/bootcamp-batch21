
<div class="" style="margin-left: 1vw;" ><!-- class="article-grid" -->
  <!-- d-flex flex-row -->
  
  <% articles.forEach(article => { %>
      <a  href="/articles/<%= article.id %>">
        <img height="20%" width="15%" src="<%= article.coverImagePath %>" alt="">
        </a>
        <div > <!-- class="article-title" -->
          <h5 ><%= article.title %> </h5>
          <h6>by <%=article.author%>, <%=article.publishDate.toDateString() %></h6>
          <h6 ><%= article.category.name %> </h6>
          <p ><%= article.content %></p>
        </div>
      <%})%>

</div>